<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LUTEMON GAME"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnCreateLutemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Lutemon"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnManageLutemons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Lutemons"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnTrainingArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Training Area"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnBattleArena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Battle Arena"
        app:rippleColor="#2B2D30" />

</LinearLayout>
